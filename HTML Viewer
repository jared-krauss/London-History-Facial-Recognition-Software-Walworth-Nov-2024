    <script src="js/gaussian-splat-viewer.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('canvas-container');
            const viewer = new GaussianSplatViewer(container);
            
            // Load your .ply model - replace with your actual model URL
            viewer.loadModel('models/your_model.ply');
        });
    </script>
